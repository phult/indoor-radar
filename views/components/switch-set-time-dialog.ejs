<div class="modal fade" id="switchSetTimeDialog" tabindex="-1" role="dialog" aria-labelledby="switchSetTimeDialogLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="switchSetTimeDialogLabel">Set time to turn <b>{{timer.timerType}}</b> switch</h4>
      </div>
      <div class="modal-body">
          <form role="form">
            <div class="box-body">
                <div class="form-group">
                  <label>Switch</label>
                  <input type="text" class="form-control" disabled="" ng-model="timer.name">
                </div>
                <div class="form-group">
                  <label>Room</label>
                  <input type="text" class="form-control" disabled="" ng-model="timer.room">
                </div>
                <div class="form-group">
                  <label>Tá»‰me</label>
                  <input type="text" class="form-control" placeholder="hh:mm" ng-model="timer.timerTime">
                </div>
                <div class="form-group">
                  <label>Date</label>
                  <input type="text" class="form-control" placeholder="dd/mm/yyyy" ng-model="timer.timerDate">
                </div>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-warning" data-dismiss="modal" ng-click="clearTimer()" style="float:left">Clear</button>
        <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="cancelTimer()">Close</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="saveTimer()">Set</button>
      </div>
    </div>
  </div>
</div>
